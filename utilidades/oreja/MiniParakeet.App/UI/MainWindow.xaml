<Window x:Class="MiniParakeet.App.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Parakeet" Height="650" Width="950" Background="{DynamicResource WindowBg}">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBg" Color="#1e1e1e" />
        <SolidColorBrush x:Key="PanelBg" Color="#252526" />
        <SolidColorBrush x:Key="Accent" Color="#007acc" />
        <Style x:Key="PartialText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <!-- Duplicamos el tamaño de la fuente (aprox de 12 -> 24) -->
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style x:Key="FinalText" TargetType="TextBlock" BasedOn="{StaticResource PartialText}">
            <Setter Property="Foreground" Value="#fff" />
        </Style>
    </Window.Resources>
    <DockPanel>
        <Border Background="{DynamicResource PanelBg}" DockPanel.Dock="Top" Padding="6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="PauseResumeBtn" Content="Pausa" Width="70" Click="PauseResume_Click"/>
                    <Button x:Name="SummaryBtn" Content="Resumen (Ctrl+Shift+R)" Click="SummaryBtn_Click" Margin="6 0 0 0" />
                    <Button x:Name="FlushBtn" Content="Flush Audio" Click="FlushBtn_Click" Margin="6 0 0 0" />
                    <Button x:Name="ClearBtn" Content="Limpiar" Click="ClearBtn_Click" Margin="6 0 0 0" />
                    <Button x:Name="ExportBtn" Content="Exportar" Click="ExportBtn_Click" Margin="6 0 0 0" />
                    <Button x:Name="SaveCfgBtn" Content="Guardar" Click="SaveCfgBtn_Click" Margin="6 0 0 0" />
                    <Border Width="120" Height="16" Margin="8 0 0 0" BorderBrush="#555" BorderThickness="1" CornerRadius="2" Background="#111">
                        <Grid>
                            <Rectangle x:Name="VuFill" HorizontalAlignment="Left" Fill="#0f0" Width="4"/>
                            <TextBlock x:Name="VuText" FontSize="10" Foreground="#ccc" HorizontalAlignment="Center" VerticalAlignment="Center" Text="VU"/>
                        </Grid>
                    </Border>
                </StackPanel>
                <TextBlock x:Name="StatusText" Grid.Column="1" HorizontalAlignment="Center" Foreground="#ccc"/>
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock x:Name="BasePathText" Foreground="#666" FontSize="10" VerticalAlignment="Center" Margin="0 0 8 0"/>
                    <CheckBox x:Name="DarkModeToggle" Content="Oscuro" IsChecked="True" Checked="ThemeToggle" Unchecked="ThemeToggle" Margin="0 0 6 0"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0" x:Name="TranscriptScroll" VerticalScrollBarVisibility="Auto" Background="{DynamicResource PanelBg}">
                <StackPanel x:Name="TranscriptPanel" />
            </ScrollViewer>
            <Border Grid.Column="1" BorderBrush="#333" BorderThickness="1" Background="{DynamicResource PanelBg}" Padding="6">
                <StackPanel>
                    <TextBlock Text="Configuración" FontWeight="Bold" Foreground="{DynamicResource Accent}" Margin="0 0 0 4"/>
                    <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                        <TextBlock Text="API Key:" Width="70" Foreground="#ccc"/>
                        <PasswordBox x:Name="ApiKeyBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                        <TextBlock Text="Prompt:" Width="70" Foreground="#ccc"/>
                        <TextBox x:Name="PromptBox" Width="200" Text="Resume en &lt;= {max} palabras."/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                        <TextBlock Text="Max Palabras:" Width="70" Foreground="#ccc"/>
                        <TextBox x:Name="MaxWordsBox" Width="60" Text="60"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                        <TextBlock Text="Ventana (s):" Width="70" Foreground="#ccc"/>
                        <TextBox x:Name="WindowSecondsBox" Width="60" Text="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                        <CheckBox x:Name="LocalWhisperToggle" Content="Whisper Local" Foreground="#ccc" Width="120" Click="LocalWhisperToggle_Click"/>
                        <ComboBox x:Name="LocalModelCombo" Width="100">
                            <ComboBoxItem Content="tiny"/>
                            <ComboBoxItem Content="base"/>
                            <ComboBoxItem Content="small"/>
                            <ComboBoxItem Content="medium"/>
                            <ComboBoxItem Content="large"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                        <TextBlock Text="Coste:" Width="70" Foreground="#ccc"/>
                        <TextBlock x:Name="CostText" Foreground="#ccc"/>
                    </StackPanel>
                    <CheckBox x:Name="EphemeralToggle" Content="Modo Efímero" Foreground="#ccc" Margin="0 4 0 0"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
