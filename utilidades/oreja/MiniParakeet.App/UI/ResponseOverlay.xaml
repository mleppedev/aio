<Window x:Class="MiniParakeet.App.UI.ResponseOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="#DD000000"
        Topmost="True" ShowInTaskbar="False" Width="400" Height="250"
        KeyDown="Window_KeyDown" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="Overlay">
    <Border CornerRadius="8" Padding="12" Background="#222" BorderBrush="#555" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="ContentText" Foreground="White" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Border>
</Window>
